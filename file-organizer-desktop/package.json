{
    "name": "file-organizer-desktop",
    "version": "1.0.0",
    "description": "Intelligent File Organizer - Local Desktop Application",
    "main": "dist/main/main.js",
    "scripts": {
        "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
        "dev:main": "webpack --config webpack.main.config.js --mode development --watch",
        "dev:renderer": "webpack serve --config webpack.renderer.config.js --mode development",
        "build": "npm run build:main && npm run build:renderer",
        "build:main": "webpack --config webpack.main.config.js --mode production",
        "build:renderer": "webpack --config webpack.renderer.config.js --mode production",
        "start": "electron dist/main/main.js",
        "pack": "electron-builder",
        "dist": "npm run build && electron-builder",
        "postinstall": "electron-builder install-app-deps"
    },
    "devDependencies": {
        "@types/node": "^20.0.0",
        "@types/react": "^18.0.0",
        "@types/react-dom": "^18.0.0",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "concurrently": "^8.0.0",
        "css-loader": "^6.8.0",
        "electron": "^25.0.0",
        "electron-builder": "^24.0.0",
        "eslint": "^8.0.0",
        "html-webpack-plugin": "^5.5.0",
        "style-loader": "^3.3.0",
        "ts-loader": "^9.4.0",
        "typescript": "^5.0.0",
        "webpack": "^5.88.0",
        "webpack-cli": "^5.1.0",
        "webpack-dev-server": "^5.2.2"
    },
    "dependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    },
    "build": {
        "appId": "com.fileorganizer.app",
        "productName": "File Organizer",
        "directories": {
            "output": "release"
        },
        "files": [
            "dist/**/*",
            "assets/**/*"
        ],
        "mac": {
            "icon": "assets/icons/icon.png",
            "category": "public.app-category.productivity"
        },
        "win": {
            "icon": "assets/icons/icon.ico",
            "target": "nsis"
        },
        "linux": {
            "icon": "assets/icons/icon.png",
            "target": "AppImage"
        }
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "type": "commonjs"
}
